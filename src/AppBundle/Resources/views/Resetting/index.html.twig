{% block body %}
    {% embed '@App/Partials/card.html.twig' %}

    {% block pre_card %}{{ form_start(form) }}{% endblock %}
        
    {% block card_title %}{{ 'Reset your password'|trans }}{% endblock %}
    {% block card_content %} {{ form_widget(form) }} {% endblock %}
    {% block card_action %}
        <button type="submit" class="btn btn-primary">{{ 'Reset your password'|trans }}</button>
        {{ widget('cancel_button') }}
    {% endblock %}
        
    {% block post_card %} {{ form_end(form )}}{% endblock %}
        
    {% endembed %}

{% endblock %}
