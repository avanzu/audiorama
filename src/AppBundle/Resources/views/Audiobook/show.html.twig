{% extends '@App/Layout/layout.html.twig' %}

{% block title %}{{ 'title.audiobook.details'|trans({"%model%" : record, "%app%": parent() })|desc("%model% | %app%") }}{% endblock %}

{% block search %}{% endblock %}

{% block body %}
    
    <article class="row book-detail">
        <aside class="col-md-4">
            <div class="container-3d">
                <figure class="">
                    <img class="depth-2 primary img-responsive" src="{{ record.coverImage|default(asset('sound-bars.svg')) }}" alt="{{ record }}">
                </figure>
            </div>
            
        </aside>
        <main class="col-md-8">
            <div class="panel panel-default grey depth-2">
                <div class="panel-heading">
                    <h2>{{ record.title }}</h2>
                </div>
                <div class="panel-body">
                    {{ record.description|markdown }}
                </div>
            </div>
            
            
            <div class="panel panel-default grey">
                <div class="panel-heading">
                    {{'heading.metadata'|trans|desc("Metadata")}}
                </div>
                <div class="panel-body">
    
                    {% include '@App/Audiobook/book-meta.html.twig'  %}
                    
                    
                </div>
            </div>
            
            
            
        </main>
    </article>
    
    
    
{% endblock %}