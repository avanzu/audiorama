{% block subject %}
    {{ '[%appName%] Password reset request. '|trans({"%appName%" : appName }) }}
{% endblock %}

{% block body_html %}
    <strong>{{ 'Hi, %username%'|trans({"%username%" : user.username}) }}</strong>
    <p>{{ 'We received a request to reset your password.'|trans }}</p>
    <p>
        {{ 'If you do not intend to reset your password, you may ignore this email,'|trans }}<br>
        {{ 'otherwise use the following link to reset your password.'|trans }}
    </p>
    {% set _url = url('app_reset_change_password', {"token" : user.token}) %}
    <p><a href="{{ _url }}">{{ _url }}</a></p>

{% endblock %}

{% block body_plain %}

    {{ 'Hi, %username%,'|trans({"%username%" : user.username}) }}

    {{ 'We received a request to reset your password.'|trans }}

    {{ 'If you do not intend to reset your password, you may ignore this email,'|trans }}

    {{ 'otherwise use the following link to reset your password.'|trans }}

    {{ url('app_reset_change_password', {"token" : user.token}) }}

{% endblock %}